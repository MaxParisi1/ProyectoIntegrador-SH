# API Keys necesarias para el sistema

# Groq API Key (obtener en: https://console.groq.com/)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Hugging Face API Key (obtener en: https://huggingface.co/settings/tokens)
HUGGINGFACE_API_KEY=hf_your_huggingface_api_key_here

# Configuración del modelo LLM (modelo actual: llama-3.3-70b-versatile)
LLM_MODEL=llama-3.3-70b-versatile

# Configuración del modelo de embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Configuración de tokenizers (evitar warnings)
TOKENIZERS_PARALLELISM=false

# Rutas de archivos
DATA_CSV_PATH=data/saldos.csv
KNOWLEDGE_BASE_PATH=knowledge_base/
VECTORSTORE_PATH=vectorstore/

# Configuración de la aplicación
APP_TITLE=Sistema de Atención al Cliente - BANCO HENRY
APP_PORT=8501
